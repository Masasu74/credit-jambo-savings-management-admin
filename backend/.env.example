# Credit Jambo Savings Management - Backend API
# Environment Variables Configuration

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
# MongoDB connection string
# Format: mongodb+srv://username:password@cluster/dbname?retryWrites=true&w=majority
# OR for local: mongodb://localhost:27017/credit-jambo-admin
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# Test Database (for running tests)
# Optional: Only needed if running Jest tests
MONGODB_URI_TEST=mongodb://localhost:27017/credit-jambo-test

# JWT Configuration
JWT_SECRET=change_this_secret_to_a_strong_random_string_at_least_32_characters_long
JWT_EXPIRE=24h
CUSTOMER_JWT_EXPIRES_IN=30m

# Encryption
ENCRYPTION_SECRET=32-byte-secret-key-change-me-12345678901234567890123456789012
BACKUP_ENCRYPTION_KEY=64-byte-secret-key-for-backup-encryption-1234567890123456789012345678901234567890123456789012345678901234

# Redis Configuration (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_ENABLED=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:3001

# Cloudinary Configuration (Optional - for file uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
ENABLE_CLOUDINARY=false

# Multi-tenant Configuration
MULTI_TENANT_MODE=false
DEFAULT_CLIENT=creditjambo

# Database Connection Pool
DB_MAX_POOL_SIZE=100
DB_MIN_POOL_SIZE=10

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=500

# Security
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# SMS Configuration (Optional - AfricasTalking)
AFRICASTALKING_API_KEY=
AFRICASTALKING_USERNAME=
AFRICASTALKING_SENDER_ID=

# File Upload
MAX_FILE_SIZE=10485760
UPLOADS_DIR=./uploads

# Logging
LOG_LEVEL=info
