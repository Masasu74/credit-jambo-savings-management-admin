# NDFIS Management System - Environment Variables

# ========================================
# Application Settings
# ========================================
NODE_ENV=production
BACKEND_PORT=4000
FRONTEND_PORT=80

# ========================================
# MongoDB Configuration
# ========================================
MONGO_USER=admin
MONGO_PASSWORD=changeme_strong_password
MONGO_DB=anchorfinance
MONGO_PORT=27017

# Production MongoDB URI (for external MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/anchorfinance?retryWrites=true&w=majority

# Connection Pool Settings
DB_MAX_POOL_SIZE=100
DB_MIN_POOL_SIZE=10
DB_CONNECT_TIMEOUT=30000
DB_SOCKET_TIMEOUT=45000

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# ========================================
# Multi-Tenant Configuration
# ========================================
MULTI_TENANT_MODE=false
DEFAULT_CLIENT=anchorfinance

# Client-specific database URIs (optional)
# CLIENT_CLIENTNAME_DB_URI=mongodb://...

# ========================================
# Security & Authentication
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_TIMEOUT=30m
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=15m

# ========================================
# Cloudinary Configuration (File Storage)
# ========================================
ENABLE_CLOUDINARY=false
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=anchor-finance
CLOUDINARY_UPLOAD_PRESET=anchor_finance_uploads

# ========================================
# Email Configuration
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@anchorfinance.com

# ========================================
# SMS Configuration (Africa's Talking)
# ========================================
AFRICASTALKING_USERNAME=your-username
AFRICASTALKING_API_KEY=your-api-key
AFRICASTALKING_SENDER_ID=ANCHORFINANCE

# ========================================
# Twilio Configuration (Alternative SMS)
# ========================================
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# AWS S3 Configuration (Alternative Storage)
# ========================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ========================================
# Application URLs
# ========================================
FRONTEND_URL=http://localhost:80
BACKEND_URL=http://localhost:4000

# ========================================
# Logging & Monitoring
# ========================================
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true

# ========================================
# Performance & Caching
# ========================================
CACHE_TTL=300
ENABLE_QUERY_CACHE=true
ENABLE_COMPRESSION=true

# ========================================
# Backup Configuration
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ========================================
# Development Settings (Local Only)
# ========================================
# Uncomment for local development without Docker
# MONGODB_URI=mongodb://localhost:27017/anchorfinance
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ========================================
# Production Notes
# ========================================
# 1. Change all default passwords and secrets
# 2. Enable HTTPS in production
# 3. Configure proper CORS origins
# 4. Set up regular backups
# 5. Configure monitoring and alerting
# 6. Use strong JWT secrets (at least 32 characters)
# 7. Enable rate limiting in production
# 8. Configure firewall rules for database access

